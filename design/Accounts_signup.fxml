<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.Region?>

<HBox
    prefHeight="400"
    xmlns:fx="http://javafx.com/fxml">
    <VBox
        prefWidth="250"
        styleClass="left-container">
        <Region prefHeight="50" />
    </VBox>
    <VBox
        prefWidth="550"
        styleClass="content">
        <Text styleClass="heading1"> Sign Up </Text>
        <HBox>
            <Label text="Email" />
            <Region minWidth="70" />
            <Text
                fx:id="emailFeedback"
                styleClass="feedback">
            </Text>
        </HBox>
        <TextField
            fx:id="email"
            promptText="Enter email here"
            onAction="#handleSignup" />
        <HBox>
            <Label text="Username" />
            <Region minWidth="40" />
            <Text
                fx:id="usernameFeedback"
                styleClass="feedback">
            </Text>
        </HBox>
        <TextField
            fx:id="username"
            promptText="Enter username here"
            onAction="#handleSignup" />
        <HBox>
            <Label text="Password" />
            <Region minWidth="40" />
            <Text
                fx:id="passwordFeedback"
                styleClass="feedback">
            </Text>
        </HBox>
        <PasswordField
            fx:id="password"
            promptText="Enter password here"
            onAction="#handleSignup" />
        <Text
            wrappingWidth="500"
            textAlignment="right"
            styleClass="link-text"
            onMouseClicked="#setLoginPage"
            onKeyPressed="#setLoginPageKeyboard"> Already have an account? Login instead!
        </Text>
        <Text
            fx:id="accountsFeedback"
            styleClass="feedback">
        </Text>
        <Region VBox.vgrow="ALWAYS" />
        <HBox styleClass="main-button-container">
            <Button
                styleClass="main-button"
                fx:id="mainButton"
                textAlignment="right"
                text="Sign Up"
                onAction="#handleSignup" />
        </HBox>
    </VBox>
</HBox>
